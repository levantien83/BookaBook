<div class="container main-content">
  <div class="row">
    <div class="<%= @col_wide %> book-block">
      <div class="clearfix">
        <div class="<%= @size %>-book-left-sidebar">
          <%= render partial: 'books/book_cover', object: @book, as: :book, locals: {source: "goodreads"} %>
          <hr>
          <div class="book-btn" align="center">
            <%= render partial: 'books/btn_to_add_book', object: @book, as: :book, locals: {source: "goodreads"} %>
          </div>
        </div>
        <div class="<%= @size %>-book-right-sidebar">
          <%= render partial: 'books/book_info', object: @book, as: :book, locals: {source: "goodreads"} %>
          <% if current_user %>
            <%= render partial: "book_reviews/form", object: @book, as: :book, locals: {source: "goodreads"} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
 