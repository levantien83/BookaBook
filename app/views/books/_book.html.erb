 <div class="<%= @col_wide %> book-block">
  <div class="media">
    <div class="media-left">
      <%= link_to book_path_replacement(book), class: "media-object" do %>
        <%= image_tag(image_url_replacement(book), class: "#{@book_cover}", alt: book.title) %>
      <% end %>
      
      <div class="book-btn" align="center"><br>
        <% if user_signed_in? %>
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" align="center" data-toggle="modal" data-target="#modal_<%= book.id %>">
            Lưu 
          </button>
          
          <!-- Modal Starting-->
          <div class="modal fade" id="modal_<%= book.id %>" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <h4 class="modal-title" id="myModalLabel">Thêm sách <strong><%= book.title %></strong> vào tủ sách của bạn</h4>
                </div>
                <%= form_for @book_item = BookItem.new do |f| %>
                  <div class="modal-body">
                    <div class="form-inline row ">
                      <label class="col-md-3 col-form-label text-xs-right">
                          Tủ sách 
                      </label>
                      <%= f.select :shelf_id, options_from_collection_for_select(current_user.shelves.all, "id", "name", @book_item.shelf_id), {}, {class: " form-control col-md-4"}%>
                    </div>
                    <div class="form-inline row ">
                      <label class="col-md-3 col-form-label text-xs-right">
                          Số lượng 
                      </label>
                      <%= f.number_field :quantity, class: "form-control col-md-4" %>
                    </div>
                  </div>
                    <% if book_id_replacement(book).nil? %>
                      <%= f.hidden_field :goodreads_id, value: goodreads_id_replacement(book) %>
                    <% else %>
                      <%= f.hidden_field :book_id, value: book_id_replacement(book) %>
                    <% end %>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
                    <%= f.submit "Thêm sách", class: "btn btn-primary" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <!-- Modal Ending -->
          
          <!--<%= link_to "Sửa", edit_book_path(book.id), class: "btn btn-primary" %>-->
          <!--<%= link_to "Xoá", book_path(book.id), class: "btn btn-danger", method: :delete  %>-->
        <% end %>
      </div>
    </div>
    
    <div class="media-body">
      <div class="book-info">
          <h4 class="media-heading"><%= book.title %></h4>
          <%= book.author.name %>
          <hr>
          <p class="book-description"><%= description_replacement(book).html_safe %></p>
      </div>
    </div>
  </div>
</div>